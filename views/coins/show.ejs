<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
    
    <div class="coin-container">
        <h1><%= data.id %></h1>
        <img src="<%= data.image.large %>" alt="">
        <h1><%= data.name %> </h1>
        <h1><%= data.pl %></h1>
        <h1><%= data.market_cap_rank %></h1>
        <h1><%= data.market_data.price_change_24h %></h1>
        <h1><%= data.price_change_percentage_1h_in_currency %></h1>
        <h1><%= data.categories[0] %></h1>
        <h1><%= data.hashing_algorithm %></h1>
        <h4><%= data.description.en %></h4>
    </div>

        <section>
            <h1>Add coin to watchlist</h1>
            <% if(user) { %>
                <h2>Add to watch list</h2>
                <form action="/coins" method="POST">
                    <input hidden name="apiId" value="<%= data.id %>" type="text">
                    <input hidden name="name" value="<%= data.name %>" type="text">
                    <input hidden name="image" value="<%= data.image.large %>" type="text">
                    <input hidden name="marketcap" value="<%= data.market_cap_rank %>" type="text">
                    <button type="submit">Add Coin</button>
                </form>
            <% } %> 
        </section>
</main>

<%- include('../partials/footer') %>